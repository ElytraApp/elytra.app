---
layout: null
permalink: /feed.json
---
{
  "version": "https://jsonfeed.org/version/1.1",
  "title": "{{ site.title }}",
  "home_page_url": "{{ site.url }}",
  "feed_url": "{{ site.url }}/feed.json",
  "description": {{ site.description | jsonify }},
  "icon": "{{ "/assets/images/appicon/appicon@2x.png" | absolute_url }}",
  "author": {
    "name": "Nikhil Nigade",
    "url": "https://social.dezinezync.com/@nikhil",
    "avatar": "https://www.gravatar.com/avatar/884e476f05a20d0af1d8de59b946dbcf"
  },
  "language": "en-IN",
  "hubs": [{
    "type": "WebSub",
    "url": "https://websubhub.com/hub"
  }],
  "items": [{% for post in collections.posts limit:10 %}
    {
      "id": "{{ site.url}}{{ post.url }}",
      "url": "{{ site.url }}{{ post.url }}",{% if post.data.link %}
      "external_url": "{{ post.data.link }}",{% endif %}{% if post.data.layout != "micro" %}
      "title": {{ post.data.title | jsonify }},{% endif %}
      "content_html": {{ post.templateContent | jsonify }},
      "date_published": "{{ post.date | date: "%Y-%m-%dT%H:%M:%S%z" }}"{%- if post.data.bannerImage -%}
      ,"banner_image": "{{ post.data.bannerImage | append: '-1200w.png' | absolute_url }}"{%- endif -%}
    }{% unless forloop.last %},{% endunless %}{% endfor %}
  ]
}